cmake_minimum_required(VERSION 2.8.3)

add_definitions(-DOROCOS_TARGET=gnulinux)

project(hardware_interface)

find_package(catkin REQUIRED COMPONENTS rtt_ros roscpp rospy std_msgs genmsg)

catkin_package(
  DEPENDS rtt 
  CATKIN_DEPENDS rtt_ros 
)

find_package(orocos_rtt REQUIRED)
include(${OROCOS-RTT_USE_FILE_PATH}/UseOROCOS-RTT.cmake)



add_definitions(-DRTT_COMPONENT)
orocos_component(${PROJECT_NAME} src/HardwareInterface.cpp src/hi_moxa.cpp src/nf/nfv2.c src/serialcomm/serialcomm.cpp)
target_link_libraries(${PROJECT_NAME} ${catkin_LIBRARIES})

orocos_generate_package()

install(FILES 
  sarkofag.launch 
  sarkofag.ops 
  DESTINATION ${CATKIN_PACKAGE_SHARE_DESTINATION})


